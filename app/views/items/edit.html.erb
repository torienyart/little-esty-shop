<h1> Edit <%= @item.name %> </h1>

<%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch, local: true do |form| %>  <%= form.label :name %>
  <%= form.text_field :name, value: @item.name %>

  <%= form.label :description %>
  <%= form.text_area :description, value: @item.description %>

  <%= form.label :unit_price %>
  <%= form.text_field :unit_price, value: @item.unit_price %>

  <%= form.submit "Update Item" %>
<% end %>