<h1>Edit Bulk Discount<%=@bulk_discount.id%></h1>
<%=form_with model: @bulk_discount, url: [@merchant, @bulk_discount], local: true do |f| %>
<%= f.label :quantity_threshold%>
<%= f.text_field :quantity_threshold%>

<%= f.label :percentage_discount%>
<%= f.text_field :percentage_discount%>

<%= f.submit 'Update Bulk Discount' %>
<%end%>